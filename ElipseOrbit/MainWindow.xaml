<Window x:Class="ElipseOrbit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Canvas Name="layoutRoot" >
        <Ellipse Name="myBall" Width="20" Height="20"
                   Canvas.Left="130" Canvas.Top="10">
            <Ellipse.Fill>
                <RadialGradientBrush GradientOrigin="0.666,0.093" 
                                       RadiusX="0.547" RadiusY="0.547" 
                                       Center="0.5,0.47">
                    <GradientStop Color="#DBFCF8F8"/>
                    <GradientStop Color="#E40C0C0C" Offset="0.87"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </Canvas>
</Window>
