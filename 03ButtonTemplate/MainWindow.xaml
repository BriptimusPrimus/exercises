<Window x:Class="_03ButtonTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fun with Templates" Height="350" Width="525">
    
    <StackPanel>
        <Button x:Name="myButton" Background="Red" Content="Howdy!"
                Click="myButton_Click" Style="{StaticResource RoundButtonStyle}"/>
        <Button x:Name="myButton2" Background="LightGreen" Content="Cancel!"
                Style="{StaticResource RoundButtonStyle}"/>
        <Button x:Name="myButton3" Background="Yellow" Content="Format"
                Style="{StaticResource RoundButtonStyle}"/>
    </StackPanel>
    
</Window>
    

